{
    "name": "SecPlugs Chrome Plugin",
    "version": "1.0",
    "description": "Real time browser security powered SecPlugs.com",
    "manifest_version": 2,
    "icons": {
        "16": "logo16.png",
        "32": "logo32.png",
        "48": "logo48.png",
        "128": "logo128.png",
    },
    "content_scripts": [
        {
          "matches": [
            "<all_urls>"
          ],
          "js": [          
              "content.js"
            ]
        }
    ],    
    "background": {      
        "page": "background.html"
    },
    "browser_action": {
        "default_icon": {
            "16": "logo16.png",
            "32": "logo32.png",
            "48": "logo48.png",
            "128": "logo128.png"
        },
        "default_title": "Click here to open menu",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "<all_urls>",
        "storage"
    ],
    "web_accessible_resources": [
        "modules/*",
        "background.html",
        "error_popup.js",
        "utils.js",
        "popup-logo.png",
        "logo.png",
        "icon16.png",
        "green_logo.png"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}