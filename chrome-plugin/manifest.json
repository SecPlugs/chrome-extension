{
    "name": "Secplugs-Chrome Plugin",
    "version": "1.0",
    "description": "Scan URLs and warn user if its malicious",
    "manifest_version": 2,
    "icons": {
        "32": "logo.png"
    },
    "content_scripts": [
        {
          "matches": [
            "<all_urls>"
          ],
          "js": [          
              "content.js"
            ]
        }
    ],    
    "background": {      
        "page": "background.html"
    },
    "browser_action": {
        "default_icon": "logo.png",
        "default_title": "Click here to open menu",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "<all_urls>",
        "storage"
    ],
    "web_accessible_resources": [
        "modules/*",
        "background.html",
        "error_popup.js",
        "utils.js",
        "popup-logo.png",
        "logo.png",
        "green_logo.png"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}